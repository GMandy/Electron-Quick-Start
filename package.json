{
  "name": "sysadvent",
  "version": "0.1.0",
  "main": "main.js",
  "devDependencies": {
    "electron": "^9.0.5",
    "electron-builder": "^20.38.1",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^12.2.0",
    "electron-toolkit": "^1.0.24"
  },
  "description": "SysAdvent",
  "author": "grm",
  "license": "ISC",
  "build": {
    "appId": "com.michaelheap.sysadvent"
  },
  "scripts": {
      "start": "electron main.js",
      "publish": "build --mac --win -p always",
      "lint": "eslint --ext .js,.vue src",
      "lint-fix": "eslint --ext .js,.vue src --fix",
      "dev": "quasar dev -m electron -t mat",
      "build": "quasar build -m electron -t mat",
      "build-linux": "quasar build -m electron linux -t mat -b builder",
      "build-win32": "quasar build -m electron win32 -t mat -b builder",
      "build-mac": "quasar build -m electron mac -t mat -b builder",
      "electron-toolkit": "electron ./node_modules/electron-toolkit",
      "test": "echo \"No test specified\" && exit 0"
  }
}
